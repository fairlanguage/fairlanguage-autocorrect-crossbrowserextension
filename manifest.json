{
  "manifest_version": 2,
  "name": "Fairlanguage",
  "description": "Write. Fair.",
  "version": "0.6",

  "browser_action": {
    "default_icon": "icon-transparent.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["build/index.js"],
      "run_at": "document_end"
    }
  ]
}